<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="알림 시간 지정"
            android:textSize="@dimen/abc_text_size_menu_material"
            android:textColor="?android:textColorPrimary" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/chk_alarm_timezone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_timezone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_timezone_from_ampm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오전"
            android:layout_gravity="bottom"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_timezone_from_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="4 : 10"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="~"
            android:textSize="40sp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tv_timezone_to_ampm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오전"
            android:layout_gravity="bottom"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_timezone_to_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="4 : 10"
            android:textSize="30sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/background_floating_material_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="알림 시 진동"
            android:textSize="@dimen/abc_text_size_menu_material"
            android:textColor="?android:textColorPrimary" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/chk_alarm_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:checked="false" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/background_floating_material_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="끌어올리기 시간설정"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/abc_text_size_menu_material"
            android:textColor="?android:textColorPrimary" />

        <Spinner
            style="@style/Material.Widget.Spinner.Light"
            android:id="@+id/spinner_reup_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="128dp"
            android:layout_weight="1"
            android:gravity="right"
            />
    </LinearLayout>
    <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:background="@color/background_floating_material_dark" />
    -->

</LinearLayout>