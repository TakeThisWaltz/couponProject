<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/img_ic_new"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_new" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_list_thmb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="6dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:border_width="1dp"
        app:border_color="#D5D5D5"/>

    <!--
    <ImageView
        android:id="@+id/img_list_thmb"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxHeight="80dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>
-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.etsy.android.grid.util.DynamicHeightTextView
            android:id="@+id/tv_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_menu_material"
            android:textColor="?android:textColorPrimary"/>

        <com.etsy.android.grid.util.DynamicHeightTextView
            android:id="@+id/tv_list_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="?android:textColorSecondary"/>
        <com.etsy.android.grid.util.DynamicHeightTextView
            android:id="@+id/tv_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@color/material_teal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_scrap_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/chk_scrap_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/btn_scrap_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/ic_del"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/chk_reup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reup" />
    </LinearLayout>

</LinearLayout>